{
  "incremental": true,
  "lineWidth": 160,
  "indentWidth": 2,
  "typescript": {
    "semiColons": "asi",
    "quoteStyle": "preferSingle"
  },
  "json": {},
  "markdown": {},
  "yaml": {},
  "prettier": {
    "trailingComma": "none",
    "singleQuote": true,
    "endOfLine": "lf",
    "semi": false,
    "bracketSpacing": true,
    "useTabs": false,
    "htmlWhitespaceSensitivity": "strict",
    "singleAttributePerLine": true
  },
  "includes": [
    "**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,toml,vue,ttss,ttml,yaml,css,scss,less,sass,rs}"
  ],
  "excludes": [
    "**/node_modules",
    "**/*-lock.json",
    "**/.next",
    "**/.turbo",
    "**/dist",
    "pnpm-lock.yaml",
    "**/target",
    "**/typed-router.d.ts",
    "**/components.d.ts",
    "**/auto-imports.d.ts",
    "./content/**"
  ],
  "plugins": [
    "https://plugins.dprint.dev/typescript-0.94.0.wasm",
    "https://plugins.dprint.dev/json-0.20.0.wasm",
    "https://plugins.dprint.dev/markdown-0.18.0.wasm",
    "https://plugins.dprint.dev/g-plane/pretty_yaml-v0.5.0.wasm",
    "https://plugins.dprint.dev/prettier-0.57.0.json@1bc6b449e982d5b91a25a7c59894102d40c5748651a08a095fb3926e64d55a31"
  ]
}
